{
  "name": "@supervise-dev/mcp",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "postinstall": "bun run build",
    "build:mastra": "mastra build --dir src --debug",
    "build:compile": "bun build .mastra/output/index.mjs --compile --external @libsql/darwin-arm64 --external @libsql/darwin-x64 --external @libsql/linux-arm64-gnu --external @libsql/linux-x64-gnu --external vscode-ripgrep",
    "build": "bun run build:mastra && bun run build:compile --outfile ./dist/mcp --target bun",
    "build:darwin-arm64": "bun run build:mastra && bun run build:compile --outfile ./dist/mcp-darwin-arm64 --target bun-darwin-arm64",
    "build:darwin-x64": "bun run build:mastra && bun run build:compile --outfile ./dist/mcp-darwin-x64 --target bun-darwin-x64",
    "build:linux-arm64": "bun run build:mastra && bun run build:compile --outfile ./dist/mcp-linux-arm64 --target bun-linux-arm64",
    "build:linux-x64": "bun run build:mastra && bun run build:compile --outfile ./dist/mcp-linux-x64 --target bun-linux-x64",
    "dev": "bun src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "mcp": "dist/mcp"
  },
  "engines": {
    "node": ">=22.13.0"
  },
  "dependencies": {
    "@mastra/core": "^0.24.8",
    "@mastra/evals": "^0.14.4",
    "@mastra/libsql": "^0.16.4",
    "@mastra/loggers": "^0.10.19",
    "@mastra/mcp": "^0.14.5",
    "@mastra/memory": "^0.15.13",
    "@types/node": "^25.0.0",
    "hono": "^4.10.8",
    "simple-git": "^3.30.0",
    "vscode-ripgrep": "^1.13.2",
    "zod": "^4"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.5",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/bun": "latest",
    "mastra": "^0.18.8",
    "prettier": "^3.7.4",
    "prettier-plugin-jsdoc": "^1.8.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-package-json": "^1.1.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "trustedDependencies": [
    "vscode-ripgrep"
  ]
}
